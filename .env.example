# ============================================================================
# Noogh Unified AI System - Environment Configuration
# ============================================================================
# Copy this file to .env and customize the values for your environment
# NOTE: Never commit .env to version control! It contains secrets.

# ============================================================================
# System Configuration
# ============================================================================

APP_NAME="Noogh Unified AI System"
VERSION="5.0.0"
DEBUG_MODE=false
COGNITION_LEVEL="TRANSCENDENT"
COGNITION_SCORE=97.5

# ============================================================================
# Server Configuration
# ============================================================================

API_HOST=0.0.0.0
API_PORT=8000
DASHBOARD_PORT=8501
LOG_LEVEL=INFO

# CORS Origins (comma-separated, * for all)
CORS_ORIGINS=*

# ============================================================================
# Database Configuration
# ============================================================================

# SQLite (default)
DATABASE_URL=sqlite:///./data/noogh.db

# PostgreSQL (production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/noogh

# MySQL
# DATABASE_URL=mysql+aiomysql://user:password@localhost:3306/noogh

DB_ECHO=false
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ============================================================================
# Security
# ============================================================================

# ⚠️ CRITICAL: Change this in production! Use a strong random key.
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-me-in-production-super-secret-key-12345

# JWT token expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=60

# OS Service Override Password (SHA256 hash)
# ⚠️ CRITICAL: Set this to prevent unauthorized system commands!
# Generate with:
#   python -c "import hashlib; password='YourSecurePassword123!'; print(hashlib.sha256(password.encode()).hexdigest())"
#
# Example (for password "MySecurePass2024!"):
# OVERRIDE_PASSWORD_HASH=a1b2c3d4e5f6...
#
# If not set, system will generate a random password at startup (check logs)
OVERRIDE_PASSWORD_HASH=

# ============================================================================
# GPU & ML Configuration
# ============================================================================

USE_GPU=true
GPU_DEVICE=0

# Model Configuration
DEFAULT_MODEL=gpt2
MAX_LENGTH=512
TEMPERATURE=0.7

# Training Configuration
BATCH_SIZE=8
LEARNING_RATE=0.00005
NUM_EPOCHS=3

# ============================================================================
# External APIs
# ============================================================================

# OpenAI API (for GPT integration)
# OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4

# Hugging Face (for model downloads)
# HUGGINGFACE_TOKEN=hf_...

# ============================================================================
# Trading APIs (Binance)
# ============================================================================

# ⚠️ Use testnet keys for development!
BINANCE_TESTNET=true

# Get keys from: https://testnet.binance.vision/ (testnet)
# or https://www.binance.com/en/my/settings/api-management (production)
# BINANCE_API_KEY=your_api_key_here
# BINANCE_API_SECRET=your_api_secret_here

# ============================================================================
# Government System
# ============================================================================

NUM_MINISTERS=14

# ============================================================================
# Notes
# ============================================================================

# - All paths are automatically created if they don't exist
# - Boolean values: true/false (case-insensitive)
# - Numeric values are validated (e.g., port must be 1-65535)
# - Required fields will raise errors if missing
# - Optional fields can be left commented out

# For a full list of available settings, see src/core/settings.py
